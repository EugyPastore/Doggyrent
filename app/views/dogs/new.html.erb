<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-6">
      <h2 class = "mb-4 mt-4">List your dog</h2>
        <div class="card-dashboard">
          <%= simple_form_for(@dog) do |f| %>
            <%= f.input :name %>
            <%= f.input :breed %>
            <%= f.input :description %>
            <%= f.input :address %>
            <%= f.input :photos, as: :file, input_html: { multiple: true } %>
            <%= f.submit class: "btn btn-primary mt-3" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
