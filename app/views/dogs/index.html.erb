<div class="container">
  <h1>These doggies are waiting for you</h2>
  <div class="row">
  <% @dogs.each do |dog| %>
      <div class="col-4">
        <div class="card" style="width: 18rem;">
          <% if dog.photos.attached? %>
            <%= cl_image_tag dog.photos.first.key, height: 300, width: 400, crop: :fill, class: 'card-img-top'%>
          <% else %>
            <img class="card-img-top" src="https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fstatic.onecms.io%2Fwp-content%2Fuploads%2Fsites%2F47%2F2021%2F05%2F18%2Fcockapoo-red-colored-greenery-223686877-2000.jpg" alt="Card image cap">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to dog.name, dog_path(dog) %></h5>
            <p class="card-text"><%= dog.description %></p>
            <%= link_to "Book me!", new_dog_booking_path(dog), class: "btn btn-primary"%>
          </div>
        </div>
      </div>
  <% end %>
  </div>

  <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
